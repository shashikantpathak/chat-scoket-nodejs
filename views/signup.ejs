<!DOCTYPE html>
<html>

<head>

    <title>User Management</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" src="./css/login.css" />


</head>

<body>


    <div id="main">
        <div class="main">
            <form action="/signup" method="post">

                <h1>
                    Register
                </h1>
                <% if(hasErrors){ %>
                    <div>
                        <% _.forEach(messages,function(error){%>
                            <%=error%>
                                <%})%>

                    </div>
                    <% }%>
                        <div class="inset">
                            <p>
                                <label for="username">USERNAME</label>
                                <input type="text" name="username" class="" placeholder="">
                            </p>

                            <p>
                                <label for="email">EMAIL ADDRESS</label>
                                <input type="text" name="email" placeholder="" />
                            </p>
                            <p>
                                <label for="password">PASSWORD</label>
                                <input type="password" name="password" placeholder="" />
                            </p>

                        </div>

                        <p class="p-container">
                            <span><a href="/">Login</a></span>
                            <input type="submit" class="login-log" style=" background: #3bb5ec; border: #3bb5ec;" value="Register">
                        </p>
            </form>
        </div>
    </div>


</body>

</html>